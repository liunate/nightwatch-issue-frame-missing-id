{
  "src_folders": [
    "tests"
  ],
  "webdriver": {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },
  "test_settings": {
    "default": {
      "launch_url": "https://developer.mozilla.org/en-US/docs/Web/HTML/Element/iframe",
      "silent": false,
      "screenshots": {
        "enabled"    : true,
        "on_failure" : true,
        "on_error"   : true,
        "path"       : "tests_output/screenshots"
      },
      "globals": {
        "abortOnAssertionFailure": false
      },
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    }
  }
}